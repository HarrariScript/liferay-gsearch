{namespace GSearchResultsLayouts}

/**
 * Print results layout options.
 *
 * @param? portletNamespace
 * @param? results
 */
{template .render}

	{if $results and $results.items and length($results.items) > 0}

		<div class="row" id="{$portletNamespace}ResultsLayout" data-ismultivalued="false">
			<ul class="options optionmenu" id="{$portletNamespace}LayoutOptions" data-paramname="resultsLayout">
				<li class="list-layout selected default">
					<a data-value="list" href="#" title="{msg desc=""}list-layout{/msg}">
						<img src="/o/gsearch-web/images/result-layouts/icon-list.png"/>
					</a>
				</li>
				<li class="thumbnail-list-layout hidden-sm hidden-xs">
					<a data-value="thumbnailList" href="#" title="{msg desc=""}thumbnail-layout{/msg}">
						<img src="/o/gsearch-web/images/result-layouts/icon-thumbnail-list.png" />
					</a>
				</li>
				<li class="image-layout hide">
					<a data-value="image" href="#" title="{msg desc=""}image-layout{/msg}">
						<img src="/o/gsearch-web/images/result-layouts/icon-image-list.png" />
					</a>
				</li>
			</ul>
		</div>
	{/if}
{/template}
